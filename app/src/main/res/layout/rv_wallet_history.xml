<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/rv_wallet_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rv_wallet_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="transaction_title_here"
        android:textColor="@color/dark_accent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rv_wallet_img"
        app:layout_constraintStart_toEndOf="@+id/rv_wallet_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_wallet_txt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="transaction_details_here"
        android:textColor="@color/dark_accent"
        app:layout_constraintStart_toEndOf="@+id/rv_wallet_img"
        app:layout_constraintTop_toBottomOf="@+id/rv_wallet_txt_title" />

    <TextView
        android:id="@+id/rv_wallet_txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="transaction_price_here"
        android:textColor="@color/dark_accent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>