<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PickRoleActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pickrole_bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pick Roles"
            android:textAlignment="center"
            android:textColor="@color/dark_accent"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <CheckBox
            android:id="@+id/check_uiux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI/UX" />

        <CheckBox
            android:id="@+id/check_copywriter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Writer" />

        <CheckBox
            android:id="@+id/check_psychology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Psychology" />

        <CheckBox
            android:id="@+id/check_career_coach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career Coach" />

        <CheckBox
            android:id="@+id/check_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health" />

        <CheckBox
            android:id="@+id/check_lecturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lecturer" />

        <CheckBox
            android:id="@+id/check_pitching_coach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitching Coach" />

        <CheckBox
            android:id="@+id/check_scholarship_coach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scholarship Coach" />

        <CheckBox
            android:id="@+id/check_foodpreneur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foodpreneur" />

        <CheckBox
            android:id="@+id/check_designer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Designer" />

        <CheckBox
            android:id="@+id/check_photographer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photographer" />

        <CheckBox
            android:id="@+id/check_ui_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI Design" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>